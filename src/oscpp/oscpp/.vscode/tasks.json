{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Intel oneAPI Environment Setup",
            "type": "shell",
            "command": "\"C:\\Program Files (x86)\\Intel\\oneAPI\\setvars.bat\" && echo Intel oneAPI environment initialized.",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Configure (Intel oneAPI)",
            "type": "shell",
            "command": "cmake -G \"Ninja\" -DCMAKE_TOOLCHAIN_FILE=cmake/intel_oneapi.cmake -DCMAKE_BUILD_TYPE=Debug -B build_intel .",
            "dependsOn": [
                "Intel oneAPI Environment Setup"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "CMake Build (Intel oneAPI)",
            "type": "shell",
            "command": "cmake --build build_intel --config Debug",
            "dependsOn": [
                "CMake Configure (Intel oneAPI)"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
