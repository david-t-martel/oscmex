{
  "configurations": [
    {
      "name": "Win64-Intel",
      "includePath": [
        "${workspaceFolder}/**",
        // --- Project Dependencies ---
        "${workspaceFolder}/asio/common",
        "${workspaceFolder}/asio/host",
        "C:/Program Files/ffmpeg/include", // VERIFY THIS
        "${workspaceFolder}/src/liblo",
        // --- oneAPI Component Includes (Based on standard paths) ---
        "C:/Program Files (x86)/Intel/oneAPI/tbb/latest/include",
        "C:/Program Files (x86)/Intel/oneAPI/mkl/latest/include",
        "C:/Program Files (x86)/Intel/oneAPI/ipp/latest/include",
        "C:/Program Files (x86)/Intel/oneAPI/ippcp/latest/include",
        "C:/Program Files (x86)/Intel/oneAPI/dal/latest/include",
        "C:/Program Files (x86)/Intel/oneAPI/dpl/latest/include",
        // --- Optional GUI Library ---
        "C:/path/to/gui_library/include" // ADJUST or REMOVE
      ],
      "defines": [
        "_DEBUG",
        "UNICODE",
        "_UNICODE"
      ],
      // Compiler path relies on PATH set by setvars.bat
      "compilerPath": "icx.exe",
      "windowsSdkVersion": "10.0.26100.0", // Updated to match environment
      "cStandard": "c17",
      "cppStandard": "c++17",
      "intelliSenseMode": "windows-clang-x64",
      "compilerArgs": []
    }
  ],
