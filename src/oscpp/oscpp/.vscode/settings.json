{
    "files.associations": {
        "*.h": "cpp",
        "*.cpp": "cpp"
    },
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 100, NamespaceIndentation: All }",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/src/oscpp/oscpp/include"
    ],
    "C_Cpp.default.defines": [
        "_DEBUG",
        "UNICODE",
        "_UNICODE"
    ],
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "${default}",
    "C_Cpp.default.compilerPath": "C:/Program Files/LLVM/bin/clang++.exe",
    "C_Cpp.intelliSenseEngineFallback": "Disabled",
    "C_Cpp.autocomplete": "Default",
    "C_Cpp.errorSquiggles": "Enabled",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/build": true,
        "**/bin": true
    },
    "files.trimTrailingWhitespace": true,
    "search.exclude": {
        "**/build": true,
        "**/bin": true
    }
}
